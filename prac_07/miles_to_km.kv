BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: number_input
            text: '1.0'
            on_text: app.handle_conversion(number_input, output_label)
            size_hint_x: 3
            font_size: 48
        BoxLayout:
            orientation: "vertical"
            Button:
                id: up_button
                text: "Up"
                on_press: app.handle_increment(1, number_input)
            Button:
                id: down_button
                text: "Down"
                on_press: app.handle_increment(-1, number_input)
#    Button:
#        id: convert_button
#        text: "Convert miles to km"
#        on_press: app.handle_conversion(number_input, output_label)
    Label:
        id: output_label
        text: "1.60934"
        color: (1, 1, 0, 1)
        font_size: 48